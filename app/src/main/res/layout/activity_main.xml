<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="421dp"
            android:layout_height="139dp"
            android:id="@+id/linearLayout" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    >
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="194dp" app:srcCompat="@drawable/esta"
                android:id="@+id/imageView3"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="8dp"/>
    </LinearLayout>
    <TextView
            android:text="Nombre:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EtiquetaNombre"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="31dp" android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/NombreIngresado"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/NombreIngresado" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintStart_toEndOf="@+id/EtiquetaNombre"
            android:layout_marginEnd="129dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:layout_width="44dp"
            android:layout_height="41dp" app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/BotonEstrella" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:layout_marginEnd="29dp"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="mostrarTexto"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Resultado" android:layout_marginTop="104dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp" android:textSize="24sp"/>
    <Button
            android:text="Tikal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botonTikal" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="232dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:onClick="abrirBotonTikal"/>
    <Button
            android:text="Antigua Guatemala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="352dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:onClick="abrirAntigua"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3" android:text="Semuc Champey" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="292dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:onClick="abrirSemuc"/>


</android.support.constraint.ConstraintLayout>