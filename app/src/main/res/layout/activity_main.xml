<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Get In!"
            android:layout_width="156dp"
            android:layout_height="92dp"
            android:id="@+id/Empezar" android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:layout_marginBottom="181dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="empezar"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/g"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/titulo" android:layout_marginBottom="28dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/Empezar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <TextView
            android:text="Guatemala App"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titulo" android:textSize="50sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/imageView2"
            android:layout_marginTop="43dp" android:layout_marginStart="16dp"
            android:layout_marginBottom="9dp" app:layout_constraintBottom_toTopOf="@+id/imageView2"/>
</android.support.constraint.ConstraintLayout>