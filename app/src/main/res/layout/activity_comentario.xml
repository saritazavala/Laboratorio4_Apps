<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Comentario">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titulo" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/info" android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="@+id/info"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info"
            app:layout_constraintStart_toStartOf="@+id/frase" android:layout_marginTop="41dp"
            app:layout_constraintTop_toBottomOf="@+id/titulo" app:layout_constraintEnd_toEndOf="@+id/frase"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frase" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="54dp" android:layout_marginStart="48dp"
            app:layout_constraintTop_toBottomOf="@+id/info"/>
</android.support.constraint.ConstraintLayout>