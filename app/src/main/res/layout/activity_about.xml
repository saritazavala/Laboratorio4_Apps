<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".About">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="275dp" app:srcCompat="@drawable/i"
            android:id="@+id/imageView4"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="54dp" android:layout_marginEnd="54dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="About"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="24sp" android:textAlignment="center"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" app:layout_constraintStart_toStartOf="@+id/textView5"
            android:layout_marginStart="80dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_info_details"
            android:id="@+id/imageView5"
            android:layout_marginTop="37dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            android:layout_marginStart="26dp" app:layout_constraintStart_toEndOf="@+id/textView4"/>
    <TextView
            android:text="Me llamo Sara Zavala, tengo 19 años y nací el 14 de Diciembre de 1999. Actualmente estudio ingeniería en ciencias de la computación. Mi comida favorita son las hamburguesas y la carne asada."
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:id="@+id/textView5"
            android:textSize="18sp" android:textStyle="bold"
            android:fontFamily="@font/aladin"
            android:layout_marginTop="88dp" app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="?attr/actionModeCloseDrawable"
            android:id="@+id/atras"
            android:onClick="backear"
            app:layout_constraintBottom_toTopOf="@+id/imageView4" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>